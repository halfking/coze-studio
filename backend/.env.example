# 服务器配置
SERVER_PORT=8080
SERVER_MODE=debug

# 数据库配置
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=password
DB_NAME=cozerights
DB_SSLMODE=disable

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# 日志配置
LOG_LEVEL=info

# RBAC配置
RBAC_USER_CACHE_TTL=5m
RBAC_ROLE_CACHE_TTL=30m
RBAC_WORKSPACE_CACHE_TTL=10m
RBAC_PERFORMANCE_THRESHOLD=100ms

# JWT配置
JWT_SECRET=cozerights-secret-key-change-in-production
JWT_EXPIRATION=24h
JWT_REFRESH_TIME=168h
JWT_ISSUER=cozerights
